# PostgreSQL Database Configuration
POSTGRES_USER=smart_task_user
POSTGRES_PASSWORD=a_very_strong_and_secret_password
POSTGRES_DB=smart_task_db
POSTGRES_HOST=db # This is the service name from docker-compose.yml
POSTGRES_PORT=5432

# This is the full connection string the application will use
DATABASE_URL="postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}"

# Cloudinary Credentials (for Phase 2)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
